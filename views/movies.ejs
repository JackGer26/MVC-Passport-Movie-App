<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸŽ¬ My Movie Watchlist</title>
    <link rel="stylesheet" href="css/movies.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <header class="header">
            <h1><i class="fas fa-film"></i> My Movie Watchlist</h1>
            <div class="user-info">
                <span class="welcome">Welcome, <%= user.userName %>!</span>
                <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </header>

        <div class="stats">
            <div class="stat-card">
                <i class="fas fa-list"></i>
                <span class="stat-number"><%= movies.length %></span>
                <span class="stat-label">Total Movies</span>
            </div>
            <div class="stat-card">
                <i class="fas fa-clock"></i>
                <span class="stat-number"><%= left %></span>
                <span class="stat-label">To Watch</span>
            </div>
            <div class="stat-card">
                <i class="fas fa-check-circle"></i>
                <span class="stat-number"><%= movies.length - left %></span>
                <span class="stat-label">Watched</span>
            </div>
        </div>

        <div class="add-movie-section">
            <h2><i class="fas fa-plus-circle"></i> Add New Movie</h2>
            <form action="/movies/addMovie" method='POST' class="add-movie-form">
                <div class="form-row">
                    <input type="text" placeholder="Movie Title" name='movieTitle' required class="movie-input">
                    <input type="text" placeholder="Genre (optional)" name='genre' class="genre-input">
                    <input type="number" placeholder="Year" name='year' min="1900" max="2030" class="year-input">
                    <button type="submit" class="add-btn"><i class="fas fa-plus"></i> Add to Watchlist</button>
                </div>
            </form>
        </div>

        <div class="movies-section">
            <h2><i class="fas fa-popcorn"></i> Your Movies</h2>
            
            <% if (movies.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-film"></i>
                    <h3>No movies in your watchlist yet!</h3>
                    <p>Add your first movie above to get started.</p>
                </div>
            <% } else { %>
                <div class="movies-grid">
                    <% movies.forEach( movie => { %>
                        <div class='movie-card <%= movie.watched === true ? 'watched' : 'unwatched'%>' data-id='<%=movie._id%>'>
                            <div class="movie-header">
                                <h3 class="movie-title"><%= movie.title %></h3>
                                <div class="movie-actions">
                                    <button class="action-btn watch-btn" title="<%= movie.watched ? 'Mark as Unwatched' : 'Mark as Watched' %>">
                                        <i class="fas <%= movie.watched ? 'fa-eye-slash' : 'fa-eye' %>"></i>
                                    </button>
                                    <button class="action-btn delete-btn" title="Remove from Watchlist">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="movie-details">
                                <% if (movie.genre) { %>
                                    <span class="genre-tag"><i class="fas fa-tag"></i> <%= movie.genre %></span>
                                <% } %>
                                <% if (movie.year) { %>
                                    <span class="year-tag"><i class="fas fa-calendar"></i> <%= movie.year %></span>
                                <% } %>
                            </div>
                            
                            <div class="movie-status">
                                <% if (movie.watched) { %>
                                    <span class="status watched-status"><i class="fas fa-check-circle"></i> Watched</span>
                                <% } else { %>
                                    <span class="status unwatched-status"><i class="fas fa-clock"></i> To Watch</span>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>

    <script src="js/movies.js"></script>
</body>
</html>